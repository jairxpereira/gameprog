Rem Project: strings
Rem Created: 03/08/2013 19:56:28
inicio:
global branco as integer = 0xffffff
global azul   as integer = 0x0000ff

' variáveis de trabalho
nval     as integer = 170
nascii   as integer = 0
ntam     as integer = 0
txt      as string = ""
site     as string = "gameprog"
letra    as string = ""
sval     as string = "170"

initsys("strings.dba")
print
set text font "courier new"
set text size 18
set text to bold

nascii = asc ("a")
txt =  " asc(''a'') = " + str$(nascii)
print txt

txt =  " chr$(34) = " +  chr$(34)
print txt

ntam = len (site)
txt =  " len(''gameprog'') = " + str$(ntam)
print txt

print
letra = left$(site,1)
txt =  " left$(''gameprog'',1) = " + letra
print txt

letra = right$(site,4)
txt =  " right$(''gameprog'',4) = " + letra
print txt

txt =  " mid$(''gameprog'',4) = " + mid$ (site,4)
print txt

print
txt =  " bin$(170) = " + bin$ (170)
print txt

txt =  " hex$(170) = " +  hex$ (170)
print txt

print
txt =  " upper$(''gameprog'') = " + upper$ (site)
print txt
txt =  " lower$(''gameprog'') = " + lower$ (site)
print txt

print
txt =  " str$(65) = ''" + str$(65) + "''"
print txt
txt =  " val('170')+ 10 = " + str$ (val(sval) + 10)
print txt
txt =  " space$(4) + ''Gameprog'' = " + space$(4) + "''Gameprog''"
print txt

final:
text 20,360, " Pressione qualquer tecla para encerrar"
suspend for key
end

' ----- initsys() - Configuração básica da aplicação -----
function initsys(txt as string)
' configurando a janela
set window on
set window title txt
ink azul, branco
cls branco
endfunction

